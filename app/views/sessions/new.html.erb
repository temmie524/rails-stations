<h1>Log in</h1>

<div class="login">
  <div class="row">
    <%= form_with(url: login_path, scope: :session) do |f| %>

      <%= f.label :name %><br>
      <%= f.email_field :name, class: 'form-control' %><br>

      <%= f.label :email %><br>
      <%= f.email_field :email, class: 'form-control' %><br>

      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'form-control' %><br>

      <%= f.submit "Log in", class: "btn btn-primary" %><br>
    <% end %>

    <p>New user? <%= link_to "Sign up now!",  "/users/new"%></p><br>
  </div>
</div>